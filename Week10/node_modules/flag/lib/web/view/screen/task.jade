	script(src="/static/kissy-min.js")
	script
		KISSY.ready(function(){
			var S = KISSY,
				E = S.Event,
				D = S.DOM,
				IO = S.IO;
			E.on('#rootSetting','submit',function(e){
				e.halt();
				IO.getScript("/api/saveRoot?rootDir=" + D.get("#rootDir").value + "&callback=saveRootHandler");
			})
		});
		function saveRootHandler(result){
			if(result.state === "success"){
				alert("设置成功");
			}else{
				alert(result.msg);
			}
		}
		
