extends ../layout/frame
block content
	.container
		ul.nav.nav-pills
			li.active
				a(href="/task") 进行中
			li
				a(href="/task/all") 全部
			li
				a(href="/task/add") 新建
		
		h3 #{task.taskname}

			
		.tabbable
			ul.nav.nav-tabs
				li.active
					a(href="#tab1",data-toggle="tab") 基础操作
				li
					a(href="#code",data-toggle="tab") 代码库
				- each plugin in plugins
					li
						a(href="##{plugin.name}",data-toggle="tab") #{plugin.name}
				li
					a(href="#proxy",data-toggle="tab") 代理
			.tab-content
				#tab1.tab-pane.active
					button 更新到服务器
					button 完成
				#code.tab-pane
					input(type="text",value="http://gitlab.alibaba-inc.com/yuchun/a.git")
					button pull
					button add
					button commit
					button push
					button 手动操作
					br
					input(type="text",value="http://svn.dev.taobao.net/xxx/")
					button update
					button commit
					button 手动操作
				- each plugin in plugins
					.tab-pane(id="#{plugin.name}")
						iframe.plugin-setting(src="http://localhost:#{plugin.port}#{plugin.workingPage}")
				#proxy.tab-pane
					span 代理规则

